<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonsStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginLeft">@dimen/spacing_size_medium</item>
        <item name="android:layout_marginRight">@dimen/spacing_size_medium</item>
    </style>

    <style name="CheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_marginLeft">@dimen/spacing_size_medium</item>
        <item name="android:layout_marginRight">@dimen/spacing_size_medium</item>
    </style>

    <style name="TextStyleSmall" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextStyleMedium" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextStyleLarge" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>